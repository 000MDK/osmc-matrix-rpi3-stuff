        <platform>linux</platform>
        <disclaimer>For Kodi linux (tested on OSMC final)</disclaimer>
        <summary lang="en">Launch RetroArch from Kodi.</summary>
        <description lang="en">Launch RetroArch from Kodi.</description>
        <website>https://github.com/mcobit/retrosmc/</website>
        <email>me@me.me</email>
        <assets>
          <icon>icon.png</icon>
          <fanart>fanart.jpg</fanart>
        </assets>
	</extension>
</addon>
